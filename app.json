{
  "_comment": "This file is generated. Please edit .homeycompose/app.json instead.",
  "id": "com.homevolt.local",
  "name": {
    "en": "Homevolt"
  },
  "description": {
    "en": "Home energy at your fingertips"
  },
  "version": "0.2.0",
  "sdk": 3,
  "compatibility": ">=12.2.0",
  "author": {
    "name": "Love Thyresson",
    "email": "love@thyresson.se"
  },
  "brandColor": "#003CFF",
  "images": {
    "small": "/assets/images/homevolt-small.png",
    "large": "/assets/images/homevolt-large.png",
    "xlarge": "/assets/images/homevolt-xlarge.png"
  },
  "category": "energy",
  "drivers": [
    {
      "id": "homevolt-battery",
      "name": {
        "en": "Homevolt battery"
      },
      "class": "battery",
      "capabilities": [
        "measure_battery",
        "measure_power",
        "measure_power.target_power",
        "meter_power.imported",
        "meter_power.exported",
        "measure_energy_available",
        "measure_temperature",
        "measure_frequency"
      ],
      "capabilitiesOptions": {
        "meter_power.imported": {
          "title": {
            "en": "Imported Energy"
          }
        },
        "meter_power.exported": {
          "title": {
            "en": "Exported Energy"
          }
        },
        "measure_power.target_power": {
          "title": {
            "en": "Target Power"
          }
        }
      },
      "energy": {
        "homeBattery": true,
        "batteries": [
          "INTERNAL"
        ]
      },
      "images": {
        "xlarge": "/drivers/homevolt-battery/assets/images/homevolt_xlarge.png",
        "large": "/drivers/homevolt-battery/assets/images/homevolt_large.png",
        "small": "/drivers/homevolt-battery/assets/images/homevolt_small.png"
      },
      "icon": "/drivers/homevolt-battery/assets/icon.svg",
      "platforms": [
        "local"
      ],
      "connectivity": [
        "lan"
      ],
      "discovery": "homevolt",
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "settings": [
        {
          "id": "pollingInterval",
          "type": "number",
          "label": {
            "en": "Polling Interval (seconds)"
          },
          "hint": {
            "en": "Interval in seconds for fetching data (default: 5 seconds)."
          },
          "default": 5,
          "min": 1,
          "max": 60
        }
      ]
    },
    {
      "name": {
        "en": "Homevolt sensors"
      },
      "class": "sensor",
      "capabilities": [
        "measure_power",
        "measure_power.currentL1",
        "measure_power.currentL2",
        "measure_power.currentL3",
        "meter_power.imported",
        "meter_power.exported",
        "measure_signal_strength"
      ],
      "capabilitiesOptions": {
        "meter_power.imported": {
          "title": {
            "en": "Imported Energy"
          }
        },
        "meter_power.exported": {
          "title": {
            "en": "Exported Energy"
          }
        },
        "measure_power.currentL1": {
          "title": {
            "en": "Current L1"
          },
          "units": {
            "en": "A"
          },
          "decimals": 2
        },
        "measure_power.currentL2": {
          "title": {
            "en": "Current L2",
            "units": {
              "en": "A"
            },
            "decimals": 2
          }
        },
        "measure_power.currentL3": {
          "title": {
            "en": "Current L3",
            "units": {
              "en": "A"
            },
            "decimals": 2
          }
        }
      },
      "energy": {
        "cumulative": true,
        "cumulativeImportedCapability": "meter_power.imported",
        "cumulativeExportedCapability": "meter_power.exported"
      },
      "images": {
        "xlarge": "/drivers/homevolt-sensor/assets/images/pulse-ct_xlarge.png",
        "large": "/drivers/homevolt-sensor/assets/images/pulse-ct_large.png",
        "small": "/drivers/homevolt-sensor/assets/images/pulse-ct_small.png"
      },
      "icon": "/drivers/homevolt-sensor/assets/icon.svg",
      "platforms": [
        "local"
      ],
      "connectivity": [
        "lan"
      ],
      "discovery": "homevolt",
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ],
      "settings": [
        {
          "id": "pollingInterval",
          "type": "number",
          "label": {
            "en": "Polling Interval (seconds)"
          },
          "hint": {
            "en": "Interval in seconds for fetching data (default: 5 seconds)."
          },
          "default": 5,
          "min": 1,
          "max": 60
        }
      ],
      "id": "homevolt-sensor"
    }
  ],
  "capabilities": {
    "measure_discharge_power": {
      "type": "number",
      "title": {
        "en": "Discharge Power"
      },
      "desc": {
        "en": "The current discharge power of the system in watts."
      },
      "units": {
        "en": "W"
      },
      "getable": true,
      "setable": false
    },
    "measure_energy_available": {
      "type": "number",
      "title": {
        "en": "Available Energy"
      },
      "desc": {
        "en": "The available energy in the battery (kWh)."
      },
      "units": {
        "en": "kWh"
      },
      "insights": true,
      "decimals": 2,
      "getable": true,
      "setable": false
    },
    "measure_frequency": {
      "type": "number",
      "title": {
        "en": "Grid Frequency"
      },
      "desc": {
        "en": "The currently measured grid frequency."
      },
      "units": {
        "en": "Hz"
      },
      "insights": true,
      "decimals": 3,
      "getable": true,
      "setable": false
    }
  },
  "discovery": {
    "homevolt": {
      "type": "mdns-sd",
      "mdns-sd": {
        "name": "http",
        "protocol": "tcp"
      },
      "id": "{{address}}",
      "conditions": [
        [
          {
            "field": "name",
            "match": {
              "type": "string",
              "value": "Homevolt"
            }
          }
        ]
      ]
    }
  }
}