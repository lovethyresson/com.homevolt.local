{
  "id": "homevolt",
  "name": {
    "en": "Homevolt battery"
  },
  "class": "battery",
  "capabilities": [
    "measure_battery",
    "measure_power",
    "meter_power.imported",
    "meter_power.exported",
    "measure_target_power",
    "measure_energy_available",
    "measure_temperature",
    "measure_frequency"
  ],
  "capabilitiesOptions": {
    "meter_power.imported": {
      "title": { "en": "Imported Energy" }
    },
    "meter_power.exported": {
      "title": { "en": "Exported Energy" }
    }
  },
  "energy": {
    "homeBattery": true,
    "cumulative": true,
    "cumulativeImportedCapability": "meter_power.imported",
    "cumulativeExportedCapability": "meter_power.exported",
    "batteries": ["INTERNAL"]
  },
  "images": {
    "large": "/drivers/homevolt/assets/logo-large.png",
    "small": "/drivers/homevolt/assets/logo-small.png"
  },
  "platforms": [
    "local"
  ],
  "connectivity": [
    "lan"
  ],
  "discovery": "homevolt",
  "pair": [
    {
      "id": "list_devices",
      "template": "list_devices",
      "navigation": {
        "next": "add_devices"
      }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ],
  "settings": [
    {
      "id": "pollingInterval",
      "type": "number",
      "label": {
        "en": "Polling Interval (seconds)"
      },
      "hint": {
        "en": "Interval in seconds for fetching data (default: 5 seconds)."
      },
      "default": 5,
      "min": 1,
      "max": 60
    }
  ]
}
